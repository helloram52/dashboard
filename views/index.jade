extends layout

block content
	.container
		h1(class="text-center")
			span D3 Demo
		hr
	#qtr-wrapper
		.container
			span Quarters
			br
			div(class="btn-group" data-toggle="buttons")
				label(class="btn btn-primary active")
					<input type="checkbox" id="qtr-all"> ALL
				label(class="btn btn-primary")
					<input type="checkbox" id="qtr1"> QTR-1
				label(class="btn btn-primary")
					<input type="checkbox" id="qtr2"> QTR-2
				label(class="btn btn-primary")
					<input type="checkbox" id="qtr3"> QTR-3
				label(class="btn btn-primary")
					<input type="checkbox" id="qtr4"> QTR-4
			br
			span Months
			br
			div(class="btn-group month-group" data-toggle="buttons")
				label(class="btn btn-primary active")
					<input type="checkbox" id="jan"> Jan
				label(class="btn btn-primary active")
					<input type="checkbox" id="feb"> Feb
				label(class="btn btn-primary active")
					<input type="checkbox" id=""> Mar
				label(class="btn btn-primary active")
					<input type="checkbox" id="apr"> Apr
				label(class="btn btn-primary active")
					<input type="checkbox" id="may"> May
				label(class="btn btn-primary active")
					<input type="checkbox" id="jun"> Jun
				label(class="btn btn-primary active")
					<input type="checkbox" id="jul"> Jul
				label(class="btn btn-primary active")
					<input type="checkbox" id="aug"> Aug
				label(class="btn btn-primary active")
					<input type="checkbox" id="sept"> Sept
				label(class="btn btn-primary active")
					<input type="checkbox" id="oct"> Oct
				label(class="btn btn-primary active")
					<input type="checkbox" id="nov"> Nov
				label(class="btn btn-primary active")
					<input type="checkbox" id="dec"> Dec
	#year-wrapper
		.container
			span Years
			br
			#year-btn-wrapper
				div(class="btn-group btn-group-vertical" data-toggle="buttons")
					label(class="btn btn-primary active")
						<input type="checkbox" id="year-all">ALL
					label(class="btn btn-primary")
							<input type="checkbox">2003
					label(class="btn btn-primary")
							<input type="checkbox">2004
					label(class="btn btn-primary")
							<input type="checkbox">2005
					label(class="btn btn-primary")
							<input type="checkbox">2006
					label(class="btn btn-primary")
							<input type="checkbox">2007
					label(class="btn btn-primary")
							<input type="checkbox">2008
					label(class="btn btn-primary")
							<input type="checkbox">2009
					label(class="btn btn-primary")
							<input type="checkbox">2010
					label(class="btn btn-primary")
							<input type="checkbox">2011
	.container
		#canvas-div
				button(class="btn btn-lg btn-warning loadingbtn" style="text-align: center")
					span(class="glyphicon glyphicon-refresh glyphicon-refresh-animate")
					| Loading...